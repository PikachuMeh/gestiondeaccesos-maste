# Build React Vite desde html/mi-app/
FROM node:20-alpine AS builder
WORKDIR /app
COPY html/mi-app/package*.json ./
RUN npm ci
COPY html/mi-app ./
ENV VITE_API_URL=http://localhost:8080/api
RUN npm run build

# Nginx con React dist
FROM nginx:alpine
COPY --from=builder /app/dist /usr/share/nginx/html
EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
